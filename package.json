{
  "name": "bm-launcher",
  "version": "1.0.0",
  "description": "a launcher for binmaster products",
  "author": "aesthetic",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "compile_css": "npx tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css",
    "start": "npm run compile_css && electron-forge start",
    "tailwind": "npx tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css --watch",
    "make": "npm run compile_css && electron-forge make",
    "package": "npm run compile_css && electron-forge package",
    "build-web": "cp html out/html; rm -r out/html/startPage;"
  },
  "private": true,
  "dependencies": {
    "adm-zip": "^0.5.10",
    "ansi-to-html": "^0.7.2",
    "axios": "^1.6.7",
    "daisyui": "^4.6.1",
    "jsoneditor": "^10.0.0",
    "monaco-loader": "^1.0.0",
    "node-pty": "1.1.0-beta6",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "electron": "^28.2.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ]
        }
      ]
    }
  }
}
